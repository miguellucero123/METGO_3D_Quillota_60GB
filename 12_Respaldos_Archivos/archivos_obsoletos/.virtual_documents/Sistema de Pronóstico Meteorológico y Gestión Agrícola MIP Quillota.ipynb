  tags = {
    Name = "metgo3d-public-subnet-${count.index + 1}-${var.environment}"
  }
}

resource "aws_subnet" "metgo3d_private_subnet" {
  count = 2
  
  vpc_id            = aws_vpc.metgo3d_vpc.id
  cidr_block        = "10.0.${count.index + 10}.0/24"
