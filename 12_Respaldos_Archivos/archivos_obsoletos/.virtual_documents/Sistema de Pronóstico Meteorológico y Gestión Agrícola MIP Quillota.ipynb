    def calcular_estres_termico(self, temperatura: Optional[float], humedad: Optional[float]) -> Optional[float]:
        """Calcular √≠ndice de estr√©s t√©rmico para cultivos"""
        if not temperatura or not humedad:
            return None
        
        try:
            # √çndice de calor simplificado
            if temperatura < 27:
                return 0.0  # Sin estr√©s
            
            # F√≥rmula simplificada del √≠ndice de calor
            hi = temperatura + (0.5 * (temperatura + 61.0 + ((temperatura - 68.0) * 1.2) + (humedad * 0.094)))
            
            # Normalizar a escala 0-100
            if hi < 27:
                return 0.0
            elif hi < 32:
                return 25.0  # Estr√©s leve
            elif hi < 37:
                return 50.0  # Estr√©s moderado
            elif hi < 42:
                return 75.0  # Estr√©s alto
            else:
                return 100.0  # Estr√©s extremo
                
        except:
            return None
    
    def evaluar_riesgo_helada(self, temperatura: Optional[float], humedad: Optional[float]) -> Optional[str]:
        """Evaluar riesgo de heladas"""
        if not temperatura:
            return None
        
        if temperatura <= -2:
            return 'critico'  # Helada severa
        elif temperatura <= 0:
            return 'alto'     # Helada moderada
        elif temperatura <= 2:
            return 'medio'    # Riesgo de helada
        elif temperatura <= 5:
            return 'bajo'     # Condiciones fr√≠as
        else:
            return 'nulo'     # Sin riesgo
    
    def evaluar_condiciones_siembra(self, temp_aire: Optional[float], 
                                   humedad: Optional[float], 
                                   temp_suelo: Optional[float]) -> Optional[str]:
        """Evaluar condiciones para siembra"""
        if not temp_aire:
            return None
        
        # Temperatura del suelo (usar aire si no hay datos de suelo)
        temp_eval = temp_suelo if temp_suelo else temp_aire
        
        # Evaluaci√≥n b√°sica
        if temp_eval < 8:
            return 'desfavorable'  # Muy fr√≠o para la mayor√≠a de cultivos
        elif temp_eval < 12:
            return 'limitada'      # Solo cultivos resistentes al fr√≠o
        elif temp_eval < 18:
            return 'aceptable'     # Buena para cultivos de estaci√≥n fr√≠a
        elif temp_eval < 25:
            return 'optima'        # Excelente para la mayor√≠a de cultivos
        elif temp_eval < 30:
            return 'aceptable'     # Cultivos de estaci√≥n c√°lida
        else:
            return 'desfavorable'  # Demasiado calor
    
