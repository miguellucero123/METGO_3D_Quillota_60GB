    def obtener_estaciones(self):
        """Obtener todas las estaciones activas"""
        try:
            with self.engine.connect() as conn:
                if self.modo_conexion == 'sqlite':
                    query = """
                        SELECT id, nombre, latitud, longitud, elevacion, tipo, metgo_version
                        FROM estaciones_meteorologicas 
                        WHERE activo = 1
                        ORDER BY id
                    """
                else:
                    query = """
                        SELECT id, nombre, latitud, longitud, elevacion, tipo, metgo_version
                        FROM estaciones_meteorologicas 
                        WHERE activo = TRUE
                        ORDER BY id
                    """
                
                result = conn.execute(text(query))
                
                estaciones = []
                for row in result:
                    estaciones.append({
                        'id': row[0],
                        'nombre': row[1],
                        'latitud': float(row[2]),
                        'longitud': float(row[3]),
                        'elevacion': row[4],
                        'tipo': row[5],
                        'metgo_version': row[6] if len(row) > 6 else '3.0.0'
                    })
                
                return estaciones
                
        except Exception as e:
            print(f"‚ùå Error obteniendo estaciones: {e}")
            return []
    
    def insertar_datos_meteorologicos(self, datos: list):
        """Insertar datos meteorol√≥gicos adaptado al tipo de BD"""
        try:
