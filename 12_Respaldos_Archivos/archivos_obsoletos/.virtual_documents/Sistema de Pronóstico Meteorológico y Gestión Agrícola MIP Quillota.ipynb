# Sobrescribir el m√©todo preparar_datos_entrenamiento con manejo flexible de fechas
def preparar_datos_entrenamiento_corregido(self, estacion_id: int, dias_historicos: int = 90):
    """Preparar datos para entrenamiento de modelos - VERSI√ìN CORREGIDA"""
    try:
        print(f"üìä Preparando datos de entrenamiento para estaci√≥n {estacion_id}...")
        
        # Obtener datos hist√≥ricos
        datos_raw = self.gestor_bd.obtener_datos_recientes(estacion_id, dias_historicos * 24)
        
        if not datos_raw or len(datos_raw) < 168:  # M√≠nimo 7 d√≠as
            print(f"‚ö†Ô∏è Datos insuficientes para estaci√≥n {estacion_id}")
            return pd.DataFrame()
        
        # Convertir a DataFrame
        df = pd.DataFrame(datos_raw)
        
        # CORRECCI√ìN: Manejo flexible de formatos de fecha
        try:
            # Intentar formato con microsegundos primero
            df['fecha_hora'] = pd.to_datetime(df['fecha_hora'], format='%Y-%m-%d %H:%M:%S.%f')
        except ValueError:
            try:
                # Intentar formato sin microsegundos
                df['fecha_hora'] = pd.to_datetime(df['fecha_hora'], format='%Y-%m-%d %H:%M:%S')
            except ValueError:
                # Usar pandas inferencia autom√°tica como √∫ltimo recurso
                df['fecha_hora'] = pd.to_datetime(df['fecha_hora'], format='mixed')
        
        df = df.set_index('fecha_hora').sort_index()
        
        # Limpiar datos faltantes
        df = df.interpolate(method='linear').fillna(method='bfill').fillna(method='ffill')
        
        # Crear caracter√≠sticas temporales
        df = self.crear_caracteristicas_temporales(df)
        
        # Crear caracter√≠sticas de rezago (lag features)
        df = self.crear_caracteristicas_rezago(df)
        
        # Crear caracter√≠sticas meteorol√≥gicas derivadas
        df = self.crear_caracteristicas_derivadas(df)
        
        # Eliminar filas con NaN despu√©s de crear caracter√≠sticas
        df = df.dropna()
        
        print(f"‚úÖ Datos preparados: {len(df)} registros, {len(df.columns)} caracter√≠sticas")
        return df
        
    except Exception as e:
        print(f"‚ùå Error preparando datos de entrenamiento: {e}")
        return pd.DataFrame()

