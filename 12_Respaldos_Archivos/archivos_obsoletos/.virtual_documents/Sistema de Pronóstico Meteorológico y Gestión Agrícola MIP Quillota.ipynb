  enable_dns_support   = true
  
  tags = {
    Name = "metgo3d-vpc-${var.environment}"
  }
}

resource "aws_internet_gateway" "metgo3d_igw" {
  vpc_id = aws_vpc.metgo3d_vpc.id
  
  tags = {
    Name = "metgo3d-igw-${var.environment}"
  }
}

resource "aws_subnet" "metgo3d_public_subnet" {
  count = 2
  
