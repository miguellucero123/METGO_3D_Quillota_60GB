                                  alpha=0.3, color='purple')
            axes[1,1].axhline(y=UMBRALES_CRITICOS['viento']['moderado'] if 'moderado' in UMBRALES_CRITICOS['viento'] else 15, 
                             color='orange', linestyle='--', alpha=0.7, 
